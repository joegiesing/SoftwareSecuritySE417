@page
@model ResearchVault.Pages.Admin.CreateAccModel
@{
    ViewData["Title"] = "Create Account";

}

<style>

     #LayoutHeader {
         display: none;
     }

     .form-signin {
         max-width: 350px;
         max-height: 600px;
         padding: 1rem;
     }

    /* .form-floating {
       max-width: 330px;
       padding: 1rem;
     } */

     .form-signin .form-floating:focus-within {
       z-index: 2;
     }

</style>


<div class="form-signin m-auto w-100 shadow align-content-center" style="border-top: 10px #780707 solid;">

    <div class="w-100 m-auto d-flex align-items-center">
        <img src="~/images/RV-logo-cap.png" class="rv-color-second m-auto" style="height: 60px; width: 60px;" />
    </div>

    <form method="post">
        <h1 class="h3 mb-4 mt-2 fw-normal" style="text-align:center;"><strong>Create Account</strong></h1>


        @* <div class="form-floating mb-1">
            <input asp-for="rUser.Email" type="email" class="form-control" placeholder="Email">
            <label for="floatingInput">Email address</label>
            <div style="display:block; height:24px;">
                <span asp-validation-for="rUser.Email" class="text-danger"></span>
            </div>
        </div> *@


        
        <div>
            <div class="form-floating mb-2">
                <input asp-for="rUser.FName" type="text" class="form-control" placeholder="First Name">
                <label for="floatingInput">First Name</label>
            </div>
            <div>
                <span asp-validation-for="rUser.FName" class="text-danger"></span>
            </div>
        </div>
        
        <div>
            <div class="form-floating mb-2">
                <input asp-for="rUser.LName" type="text" class="form-control" placeholder="Last Name">
                <label for="floatingInput">Last Name</label>
            </div>
            <div>
                <span asp-validation-for="rUser.LName" class="text-danger"></span>
            </div>
        </div>

        <div>
            <div class="form-floating mb-2">
                <input asp-for="rUser.Email" type="email" class="form-control" placeholder="Email">
                <label for="floatingInput">Email address</label>
            </div>
            <div>
                <span asp-validation-for="rUser.Email" class="text-danger"></span>
            </div>
        </div>
        
        <div>
            <div class="form-floating mb-2">
                <input asp-for="rUser.Username" type="text" class="form-control" placeholder="Username">
                <label for="floatingPassword">Username</label>
            </div>
            <div>
                <span asp-validation-for="rUser.Username" class="text-danger"></span>
            </div>
        </div>
        
        <div>
            <div class="form-floating mb-2">
                <input asp-for="rUser.Password" type="password" class="form-control" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>
            <div>
                <span asp-validation-for="rUser.Password" class="text-danger"></span>
            </div>
        </div>
        
        @* <div class="form-floating mb-2">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Confirm Password">
            <label for="floatingPassword">Confirm Password</label>
        </div> *@

        <div class="my-3" style="text-align:center;">
            <a class="link-primary active rv-color-second" aria-current="page" asp-area="" asp-page="/admin/Index">Back To Login</a>
        </div>

        <button class="btn btn-primary btn-rv2 w-100 py-2" style="width:160px; align-content:center" type="submit">Create Account</button>
    </form>
</div>

@{
    if (Model.rUser != null && Model.rUser.Feedback != null)
    {
        <h1>Results</h1>
        <p>@Model.rUser.Feedback</p>
    }

}
