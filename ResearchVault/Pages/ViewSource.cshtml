@page
@using Microsoft.AspNetCore.Http
@model ResearchVault.Pages.ViewSourceModel
@{
}

<style>
    .form-font-view{ 
        font-family: Arial;
    }

    .form-floating:focus-within {
        z-index: 2;
    }

    .fav-container input {
        /* position: absolute; */
        opacity: 0;
        cursor: pointer;
        /*  height: 24px;
                width: 24px; */
        /* height: 0;
            width: 0; */
    }

    .fav-container {
        display: flex;
        align-content: center;
        position: relative;
        cursor: pointer;
        /* user-select: none; */
    }

    .fav-container svg {
        position: absolute;
        /* top: 0;
    left: 0; */
        /* height: 24px;
    width: 24px; */
        transition: all 0.15s;
    }

    .svg-border {
        fill: black;
    }

    .svg-fill {
        fill: none;
    }

    .fav-container svg:hover {
        transform: scale(1.1);
    }

    .fav-container input:checked ~ svg.svg-fill {
        fill: red;
    }

    .preview-border{
        border: var(--bs-border-width) solid var(--bs-border-color);
        border-radius: var(--bs-border-radius);
    }

    .ViewFormAddBtn{
        height: 100%;
        width: 100%;
        border-top-left-radius: 0px;
        border-bottom-left-radius: 0px;
    }
</style>



<div class="container mt-3">

    <h3 class="ms-3">Add Source</h3>
    

<div class="row form-font-view"> @* start of grid *@

    @*preview of text/source/image/video*@
    <div class="col-md-4 container-fluid d-flex flex-column">
        
        <div class="d-flex">
                
        </div>

        <div class="container-fluid shadow bg-body-tertiary d-flex preview-border" style="flex:auto;">


        </div>
        
    </div>


    @*form for inputing data*@
    <form method="post" class="col-md-8">

        <div class="container">

            <div class="row">

                    @* --------- Title input --------- *@
                <div class="form-floating col-md-7 mb-1">
                    <input type="text" asp-for="rSource.Title" runat="server" class="form-control @Model.ValidStatus" placeholder="Title"/>
                    <label asp-for="rSource.Title" class="form-label" style="margin-left: 12px;"></label>
                    <div class="errorMsg">
                        <span asp-validation-for="rSource.Title" class="text-danger"></span>
                    </div> 
                </div>

                    @* --------- Author input --------- *@
                <div class="col-md-5 mb-1">
                    <div class="input-group">
                        <div class="form-floating">
                            <input type="text" asp-for="rSource.Author" class="form-control" placeholder="Author" />
                            <label asp-for="rSource.Author" class="form-label"></label>
                        </div>
                        <div class="input-group-text p-0">
                            <button class="btn btn-primary btn-rv2 ViewFormAddBtn" type="button" value="btn">Add</button>
                        </div>
                    </div>

                    <div class="errorMsg">
                        <span asp-validation-for="rSource.Author" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row">

                @* --------- Publisher input --------- *@
                <div class="form-floating col-md-7 mb-1">
                    <input type="text" asp-for="rSource.Publisher" class="form-control" placeholder="Publisher" />
                    <label asp-for="rSource.Publisher" class="form-label" style="margin-left: 12px;"></label>
                    <div class="errorMsg">
                        <span asp-validation-for="rSource.Publisher" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row">

                    @* --------- Link input --------- *@
                <div class="form-floating col-md-7 mb-1">
                    <input type="text" asp-for="rSource.Link" class="form-control" placeholder="Link" />
                    <label asp-for="rSource.Link" class="form-label" style="margin-left: 12px;"></label>
                    <div class="errorMsg">
                        <span asp-validation-for="rSource.Link" class="text-danger"></span>
                    </div>
                </div>

                    @* --------- Tags input --------- *@
                <div class="col-md-5 mb-1">
                    <div class="input-group">
                        <div class="form-floating">
                            <input type="text" asp-for="rSource.Tags" class="form-control" placeholder="Tags" />
                            <label asp-for="rSource.Tags" class="form-label">Tags</label>
                            <span asp-validation-for="rSource.Tags" class="text-danger"></span>
                        </div>
                        <div class="input-group-text p-0">
                            <button class="btn btn-primary btn-rv2 ViewFormAddBtn" type="button" value="btn">Add</button>
                        </div>
                    </div>

                    <div class="errorMsg">
                        
                    </div>
                </div>

            </div>
            <div class="row">

                    @* --------- Date Created input --------- *@
                <div class="form-floating col-md-3 mb-1">
                    <input type="text" asp-for="rSource.DateCreated" class="form-control" placeholder="Date Created" />
                    <label asp-for="rSource.DateCreated" class="form-label" style="margin-left: 12px;"></label>
                    <div class="errorMsg">
                        <span asp-validation-for="rSource.DateCreated" class="text-danger"></span>
                    </div>
                </div>

                    @* --------- Type input --------- *@
                <div class="form-floating col-md-4 mb-1">
                    <select asp-for="rSource.Type" class="form-control" placeholder="Type">
                        <option selected value="">Choose Source Type</option>
                        <option value="article">Article</option>
                        <option value="book">Book</option>
                        <option value="magazine">Magazine</option>
                        <option value="video">Video</option>
                        <option value="website">Website</option>
                    </select>
                    <label asp-for="rSource.Type" class="form-label" style="margin-left: 12px;"></label>

                    <div class="errorMsg">
                        <span asp-validation-for="rSource.Type" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row">

                    @* --------- Category input --------- *@
                <div class="form-floating col-md-7 mb-1">
                    <input type="text" asp-for="rSource.Category" class="form-control" placeholder="Category" />
                    <label asp-for="rSource.Category" class="form-label" style="margin-left: 12px;"></label>
                    <span asp-validation-for="rSource.Category" class="text-danger"></span>
                    <div class="errorMsg">
                        
                    </div>
                </div>


                <div class="form-floating col-md-5 mb-1">
                    <div>
                            
                    </div>
                    <div class="d-flex align-items-center">
                        <label asp-for="rSource.Favorite" class="form-label me-3 mt-3" style="margin-left: 12px;">Favorite: </label>

                        <label class="fav-container me-2 mb-2 mt-2">

                            <input type="checkbox" asp-for="rSource.Favorite">

                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" class="svg-border" viewBox="0 0 16 16">
                                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15" />
                            </svg>
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" width="24px" class="svg-fill" viewBox="0 0 16 16">
                                <path width="24px" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314" />
                            </svg>

                        </label>
                    </div>

                </div>


            </div>
            <div class="row mb-2">

                    @* --------- Notes input --------- *@
                <div class="form-floating mb-1">
                    <textarea type="text" asp-for="rSource.Notes" class="form-control" style="height: 100px;" placeholder="Notes"></textarea>
                    <label asp-for="rSource.Notes" class="form-label" style="margin-left: 12px;"></label>
                    <span asp-validation-for="rSource.Notes" class="text-danger"></span>
                    <div class="errorMsg">
                        
                    </div>
                </div>

            </div>

            <div class="row">
                <button class="btn btn-primary btn-rv2 mx-auto" style="width: 100px;" type="submit">Submit</button>
            </div>

        </div>

    </form>

</div>
</div>

@Model.ErrorMessage

@if (Model.rSource != null)
{
    if (Model.rSource.Feedback != null)
    {
        <h1>Results</h1>
        <p>@Model.rSource.Feedback</p>
    }
}
